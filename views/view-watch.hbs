<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">View Watch</li>
    </ol>
</nav>

<div class="view-watch p-5">

{{#each rows}}
        <div class="row mb-5">
            <div class="col text-center">
                <h3>{{this.brand}} {{this.family}}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Brand</th>
                        <th scope="col">Family</th>
                        <th scope="col">Name</th>
                        <th scope="col">Glass</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">{{this.brand}}</th>
                        <td>{{this.family}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.glass}}</td>
                    </tr>

                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col">
                    <b>Functions</b>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{this.functions}}
                </div>
            </div>
        </div>
    </div>

{{/each}}