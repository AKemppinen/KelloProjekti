{{#if removedUser}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Watch has been removed.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

<div class="row">
 <div class="col-6"><h1>Users</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/admin" type="button" class="btn btn-primary align-self-center">admin</a>
    </div>

</div>


<table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Brand</th>
        <th scope="col">Family</th>
        <th scope="col">Name</th>
        <th scope="col">Glass</th>
        <th scope="col" class="text-end">Action</th>
    </tr>
    </thead>
    <tbody>

    {{#each rows}}
    <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.brand}}</td>
        <td>{{this.family}}</td>
        <td>{{this.name}}</td>
        <td>{{this.glass}}</td>
        <td class="text-end">
            <a href="/viewwatch/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
            <a href="/editwatch/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
            <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>

        </td>
    </tr>
    {{/each}}
    </tbody>
</table>